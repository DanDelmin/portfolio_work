.header {
  padding: 50px 0 0;

  &__container {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  &__logo {
    font-size: 36px;
    font-weight: 800;
    text-decoration: none;
  }
}

.nav {
  &__list {
    display: flex;
    align-items: center;
  }

  &__item:not(:first-child) {
    margin-left: 60px;
  }

  &__link {
    font-weight: 400;
    text-decoration: none;

    &:link, &:active {
      color: inherit;
    }

    &:hover {
      text-decoration: underline;
    }
  }

}

.socials {
  &__list {
    display: flex;
    align-items: center;
  }
  &__item:not(:first-child) {
    margin-left: 40px;
  }
  &__icon {
    width: 25px;
    height: 25px;
    animation: bgcolor 1s ease-in-out infinite;
  }
}