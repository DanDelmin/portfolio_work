mixin icon(name, className)
  - var icon = require(`images/icons/${name}.svg`);
  svg(class=className viewBox=icon.viewBox preserveAspectRatio="none")
    use(xlink:href=icon.url)

mixin image(path, className)
  img(src=require(`images/${path}`) class=className)

mixin nav(className, items)
  nav(class=`${className}`)
    ul(class=`${className}__list`)
      each item in items
        li(class=`${className}__item`)
          a(class=`${className}__link` href="#")= item

mixin chart(chartTitle, circles)
  .chart
    h2.chart__title= chartTitle
    ul.chart__list
      each circle in circles
        li.chart__item= circle
          svg(class="chart__svg", width="140px", height="140px", viewbox="0 0 140 140", preserveAspectRatio="none")
            circle(cx="50%", cy="50%", r="60", stroke="#e9e9e9", fill="transparent", stroke-width="10")
            defs
              linearGradient( id="gradient" x1="0%" y1="0%" x2="0%" y2="100%")
                stop(offset="0%" stop-color="#ad00ed")
                stop(offset="100%" stop-color="#5500f2")
            circle(class="progress-line", cx="50%", cy="50%", r="60", stroke="url(#gradient)", fill="transparent", stroke-width="20", stroke-dasharray="380", stroke-dashoffset="380")